/* pages/now/now.wxss */
.detail_contain{
  height: 420rpx;
  border-radius: 40rpx;
  z-index: 1;
}
.qr_contain{
  height: 650rpx;
  border-radius: 0 0 40rpx 40rpx;
  border-top:  dashed rgb(41, 41, 41);
  /* border-bottom:  dashed rgb(41, 41, 41); */

  background-color: #fff;
  z-index: 1;
  /* box-shadow: 4rpx 4rpx 100rpx rgba(0, 0, 0, 0.5); */
  border-width: 4rpx;
}
.ticket{
  box-shadow: 4rpx 4rpx 100rpx rgba(0, 0, 0, 0.5);
  border-radius: 40rpx;
  background-color: rgb(41, 41, 41);
}



.show_name{
  /* 文本溢出截断 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  word-break: break-all;
  margin: 100rpx 0 0 100rpx;
  width: 230rpx;
  /* display: inline-block; */
  color: #fff;

}
.show_post{
  width: 170rpx;
  height: 220rpx;
  position: absolute;
  line-height: 1.35;
  right: 150rpx;
  top: 120rpx;
}
.show_place_contain{
  display: flex;
  border-radius: 20rpx;
  height: 100rpx;
  width: 500rpx;
  background-color: #0058dd;
  /* box-shadow: 4rpx 4rpx 100rpx rgba(0, 88, 211, 0.5); */
  margin-top: 100rpx;
  margin-left: 75rpx;
  color: #fff;
}
.location_icon{
  width: 48rpx;
  height: 48rpx;
  display: inline-block;
  margin: 28rpx;
}
.show_place{
  margin: 28rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.qrcode
{
  padding: 20rpx 125rpx;
}
.seat{
  text-align: center;
  padding-top: 50rpx;
}
.date{
  text-align: center;
  padding-top: 20rpx;
}